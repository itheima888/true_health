    </select>
-->

    <select id="findCheckItemListById" resultType="com.itheima.pojo.CheckItem">
        select * from t_checkitem where id in(select checkitem_id from t_checkgroup_checkitem where checkgroup_id=#{checkGroupId})
    </select>

</mapper>